{
  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "printWidth": 80,
  "tabWidth": 2,
  "trailingComma": "all",
  "singleQuote": true,
  "endOfLine": "auto",
  "semi": false,
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "importOrder": [
    "dotenv/config|reflect-metadata",
    "^@core/(.*)$",
    "typeorm|fastify|@fastify/|@clerk/|@prisma/|@nestjs/|json-schema-to-ts|vitest",
    "<THIRD_PARTY_MODULES>",
    "^@server/(.*)$",
    "^@ui/(.*)$",
    "^@/lib/(.*)$",
    "^@/context/(.*)$",
    "^@/components/(.*)$",
    "^#env",
    "^#services/(.*)$",
    "^#services",
    "^#repositories/(.*)$",
    "^#repositories",
    "^#utils/(.*)$",
    "^#utils",
    "^#controllers/(.*)$",
    "^#controllers",
    "^#types/(.*)$",
    "^#types",
    "^#dtos/(.*)$",
    "^#dtos",
    "^#test-utils$",
    "^#schemas/(.*)$",
    "^#entities$",
    "^#entities/(.*)$",
    "^[./]"
  ],
  "overrides": [
    {
      "files": ["**/entities/*.ts"],
      "options": {
        "parser": "babel-ts"
      }
    },
    {
      "files": ["**/*.ts", "**/*.tsx"],
      "excludeFiles": "**/entities/*.ts",
      "options": {
        "parser": "typescript"
      }
    },
    {
      "files": ["**/*.md"],
      "options": {
        "parser": "markdown"
      }
    },
    {
      "files": ["**/*.json"],
      "options": {
        "parser": "json"
      }
    },
    {
      "files": ["**/*.html"],
      "options": {
        "parser": "html"
      }
    }
  ]
}
