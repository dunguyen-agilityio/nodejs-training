{
  "name": "@repo/typeorm-service",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "import": "./build/src/index.js",
      "types": "./build/src/index.d.ts"
    },
    "./entity": {
      "import": "./build/src/entity/index.js",
      "types": "./build/src/entity/index.d.ts"
    },
    "./services": {
      "import": "./build/src/services/index.js",
      "types": "./build/src/services/types.d.ts"
    },
    "./repositories": {
      "import": "./build/src/repositories/index.js",
      "types": "./build/src/repositories/types.d.ts"
    }
  },
  "scripts": {
    "lint": "eslint src/ --max-warnings 0",
    "test:watch": "vitest",
    "test": "vitest run",
    "check-types": "tsc --noEmit",
    "dev": "tsx --watch src/index.ts",
    "build": "tsc",
    "format": "pnpm exec prettier . --write",
    "check": "npx prettier . --check",
    "migration:generate": "npx typeorm-ts-node-commonjs migration:generate ./src/migrations/InitialDatabase -d ./src/data-source.ts",
    "typeorm": "tsx ../../node_modules/typeorm/cli-ts-node-esm.js",
    "migration:run": "npx typeorm-ts-node-commonjs migration:run -d ./src/data-source.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@trivago/prettier-plugin-sort-imports": "6.0.2",
    "@types/node": "^22.15.3",
    "eslint": "^9.39.1",
    "prettier": "^3.7.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "better-sqlite3": "^12.5.0",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.28"
  },
  "peerDependencies": {
    "typeorm": "^0.3.28"
  },
  "imports": {
    "#entity": "./src/entity/index.js"
  }
}
