{
  "name": "e-commerce-api",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "types": "index.d.ts",
  "main": "src/server.ts",
  "scripts": {
    "dev": "tsx --watch src/server.ts",
    "build": "tsc -p tsconfig.json",
    "lint": "eslint src/ --max-warnings 0",
    "test:watch": "vitest",
    "test": "vitest run",
    "check-types": "tsc --noEmit",
    "migration:generate": "pnpm typeorm-cmj migration:generate ./src/database/migrations/InitialDatabase -d ./src/database/data-source.ts",
    "typeorm": "tsx ../../node_modules/typeorm/cli-ts-node-esm.js",
    "typeorm-cmj": "tsx ../../node_modules/typeorm/cli-ts-node-commonjs.js",
    "migration:run": "pnpm typeorm-cmj migration:run -d ./src/database/data-source.ts",
    "seed-data": "pnpm typeorm-cmj migration:run -d ./src/database/seed-data-source.ts",
    "revert-data": "pnpm typeorm-cmj migration:revert -d ./src/database/seed-data-source.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@clerk/fastify": "^2.6.14",
    "@fastify/cors": "^11.2.0",
    "@fastify/type-provider-json-schema-to-ts": "^5.0.0",
    "@repo/typeorm-service": "workspace:^",
    "@sendgrid/mail": "^8.1.6",
    "better-sqlite3": "^12.5.0",
    "dotenv": "^17.2.3",
    "fastify": "^5.6.2",
    "fastify-plugin": "^5.1.0",
    "json-schema-to-ts": "^3.1.1",
    "reflect-metadata": "^0.2.2",
    "stripe": "^20.2.0",
    "typeorm": "^0.3.28"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.2.0",
    "@repo/eslint-config": "workspace:^",
    "@repo/typescript-config": "workspace:^",
    "@types/node": "^22.15.3",
    "eslint": "^9.39.1",
    "supertest": "^7.2.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "imports": {
    "#entities": "./src/database/entities/index.ts",
    "#providers": "./src/providers/index.ts",
    "#providers/*": "./src/providers/*.ts",
    "#services": "./src/services/index.ts",
    "#services/*": "./src/services/*.ts",
    "#controllers/*": "./src/controllers/*.ts",
    "#controllers": "./src/controllers/index.ts",
    "#repositories": "./src/repositories/index.ts",
    "#middlewares": "./src/middlewares/index.ts",
    "#repositories/*": "./src/repositories/*.ts",
    "#schemas/*": "./src/schemas/*.ts",
    "#types/*": "./src/types/*.ts",
    "#utils/*": "./src/utils/*.ts",
    "#data-source": "./src/database/data-source.ts"
  }
}
